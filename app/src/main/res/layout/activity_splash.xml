<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    tools:context="recetas.sherpa.studio.com.recetas.activities.SplashActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="Mis Recetas" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="recetas.sherpa.studio.com.recetas.fragments.DropboxFragment"
        android:id="@+id/dropbox_fragment"
        android:layout_gravity="center"
        tools:layout="@layout/fragment_dropbox" />

</FrameLayout>
